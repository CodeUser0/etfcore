    <!-- JAVASCRIPT FOR INTERACTIVITY -->
    <script>
        // 1. SCROLL PROGRESS BAR
        window.onscroll = function() {myFunction()};
        function myFunction() {
            var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            var scrolled = (winScroll / height) * 100;
            document.getElementById("myBar").style.width = scrolled + "%";
        }

        // 2. REACTION BUTTONS
        function toggleReaction(btn) {
            btn.classList.toggle('active');
            // Here you could add logic to save to database
        }

        // 3. CHART.JS (The Cost of Fees)
        const ctx = document.getElementById('feesChart').getContext('2d');
        const feesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Year 0', 'Year 10', 'Year 20', 'Year 30'],
                datasets: [
                    {
                        label: 'Low Fee (0.1%)',
                        data: [10000, 26000, 68000, 175000],
                        borderColor: '#10b981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'High Fee (1.0%)',
                        data: [10000, 23000, 54000, 128000],
                        borderColor: '#f87171',
                        borderDash: [5, 5],
                        fill: false,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    title: { display: true, text: 'Portfolio Value Over Time' }
                }
            }
        });
    </script>
